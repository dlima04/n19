macro(n19_enumerate_build_platform)
  set(N19_BUILD_PLATFORM ${CMAKE_HOST_SYSTEM_NAME})
  set(N19_BUILD_IS_DARWIN OFF)
  set(N19_BUILD_IS_LINUX OFF)
  set(N19_BUILD_IS_POSIX OFF)
  set(N19_BUILD_IS_WINDOWS OFF)
  set(N19_BUILD_IS_CLANGCL_WINDOWS OFF)

  if(WIN32 OR N19_BUILD_PLATFORM STREQUAL "Windows")
    set(N19_BUILD_IS_WINDOWS ON)
  elseif(N19_BUILD_PLATFORM STREQUAL "Linux")
    set(N19_BUILD_IS_LINUX ON)
    set(N19_BUILD_IS_POSIX ON)
  elseif(N19_BUILD_PLATFORM STREQUAL "Darwin")
    set(N19_BUILD_IS_DARWIN ON)
    set(N19_BUILD_IS_POSIX ON)
  else()
    message(STATUS "Note -- unrecognized build platform.")
  endif()

  if(N19_BUILD_IS_WINDOWS AND CMAKE_CXX_COMPILER_ID MATCHES "Clang")
    set(N19_IS_CLANGCL_WINDOWS ON)
  endif()
endmacro()
